# ============================================
# 网页聊天平台 - 环境变量配置
# ============================================

# 应用配置
APP_NAME=chat-platform
APP_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000

# JWT 配置
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MySQL 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=chat_user
MYSQL_PASSWORD=chat_password
MYSQL_DATABASE=chat_platform

# Redis 配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# MinIO 文件存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=chat-files
MINIO_USE_SSL=false

# WebSocket 配置
WS_PORT=3001
WS_PATH=/ws

# 日志配置
LOG_LEVEL=info
LOG_PATH=./logs

# 文件上传配置
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.mp3,.mp4

# 限流配置
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 邮件配置（可选）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# 短信配置（可选）
SMS_ACCESS_KEY=
SMS_SECRET_KEY=
SMS_SIGN_NAME=